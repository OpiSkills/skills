<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Opinity Skill List - Login{% endblock %}</title>
        
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link href="{{ asset('css/opinity.css') }}" rel="stylesheet" />
        <link href="{{ asset('css/login.css') }}" rel="stylesheet" />
    </head>

    <body>
        <div class="portal">
            <div class="content">
                <div class="background-login">
                    <div class="login-screen">
                        <form method="POST" id="frmLoginForm" onsubmit="return false;">
                        <div class="login-screen-left">
                            <h2>Login</h2>
                            <div class="clear"></div>
                            <div class="loginform-h2-underline"></div>

                            <h4>Opinity Skills</h4>

                            <div class="loginform-errormessages"></div>

                            <div class="loginform-inputbox">
                                <div class="loginform-inputbox-usr">
                                    <label>Gebruikersnaam</label>
                                    <input type="text" id="_usr_" autocomplete="off">
                                </div>

                                <div class="loginform-inputbox-pwd">
                                    <label>Wachtwoord</label>
                                    <input type="password" id="_pwd_">
                                </div>

                                <div class="loginform-inputbox-submit">
                                    <input type="submit" id="submit-login" value="Inloggen">
                                </div>

                                <div class="loginform-forgotten">
                                    <a class="forgot-password" href="/app/user-credentials">Inlog vergeten?</a>
                                </div>
                            </div>
                        </div>

                        <div class="login-screen-right">
                            <div class="slideshow">
                                <img src="{{ asset('images/login/bg1.jpg') }}"/>
                                <img src="{{ asset('images/login/bg2.jpg') }}"/>
                                <img src="{{ asset('images/login/bg3.jpg') }}"/>
                                <img src="{{ asset('images/login/bg4.jpg') }}"/>
                                <img src="{{ asset('images/login/bg5.jpg') }}"/>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
        <script src="https://use.fontawesome.com/releases/v5.0.8/js/all.js" defer></script>
        <script src="{{ asset('js/jquery.cycle.all.js') }}" defer></script>
        <script src="{{ asset('js/opinity.js') }}" defer></script>
        <script src="{{ asset('js/login.js') }}" defer></script>
    </body>
</html>
